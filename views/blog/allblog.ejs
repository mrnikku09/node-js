<%- include('../header.ejs') %>
<div class="page-content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="page-title-box d-flex justify-content-between align-items-center">
          <div>
            <h4 class="mb-sm-0">Manage Blog</h4>
            <div class="page-title-right">
              <ol class="breadcrumb m-0">
                <li class="breadcrumb-item"><a href="javascript: void(0);">Blog</a></li>
                <li class="breadcrumb-item active">Manage Blog</li>
              </ol>
            </div>
          </div>
          <div>
            <a href="/admin/addblog" class="btn btn-primary"><i class="ri-add-line me-2"></i>Add New</a>
          </div>
        </div>
      </div>
    </div>
    <div class="row">

      <div class="col-lg-12">
        <div class="card bg-secondary rounded p-2">
          <div class="card-header">
            <div class="row align-items-center gy-3">
              <div class="col-sm">
                <h5 class="card-title my-1">Blog</h5>
              </div>
            </div>
          </div>
          <div class="card-body justify-content-sm-center">
            <div class="row align-items-center gy-3">
              <div class="col-lg-12">
                <table class="table">
                  <thead>
                    <tr>
                      <th style="width:60px">S.no.</th>
                      <th>Blog Name</th>
                      <th>Blog User</th>
                      <th class="text-center">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if((typeof blogData !=="undefined" && blogData.length>0)){ var count=1; blogData.forEach((element) => { %>

                    <tr>
                      <th>
                        <%= count++ %>
                      </th>
                      <th>
                        <%= element.blog_name %>
                      </th>
                      <td>
                        <%= element.blog_desc %>
                      </td>

                      <td class="text-center">
                        <a href="/admin/addblog/<%=  element._id %>" class="btn btn-info btn-sm btnaction"><i class="fas fa-pencil-alt"></i></a>
                        <a href="/admin/deleteblog/<%=  element._id %>" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger  btn-sm btnaction"><i class="fas fa-trash "></i></a>
                      </td>
                    </tr>
                    <% }) %>

                    <% }else{ %>
                    <tr>
                      <td class="text-center" colspan="5">No Data Found</td>
                    </tr>

                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <div class="card-footer listing justify-content-sm-center">
            <p>Sowing 1 of 1</p>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>

<%- include('../footer.ejs') %>